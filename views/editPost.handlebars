<div class="card">
    <h3 class="card-header">Edit Post</h3>
    <form class="card-body "id = "editForm">
        <input type="hidden" name="post-id" value="{{posts.id}}"/>
        <label for="post-title" class="form-label">Title</label>
        <input name="post-title" type="text" value="{{posts.title}}" class="form-input"/>
        <label class="form-label" for="content">Content</label>
        <textarea name="post-body" type="text" value="{{posts.content}}" class="form-input">{{posts.body}}</textarea>
        <button type="submit" class="btn">Update Post</button>
        <button type="button" class="delete-post-btn btn">Delete Post</button>
    </form>
</div>


<script src="/js/edit.js"></script>
